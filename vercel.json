{
    "version": 2,
    "builds": [
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        },
        {
            "src": "media/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/media/:path*",
            "destination": "/media/:path*"
        },
        {
            "source": "/:path*",
            "destination": "/frontend/:path*"
        }
    ],
    "headers": [
        {
            "source": "/media/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}