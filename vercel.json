{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist",
                "buildCommand": "cd frontend && npm install && npm run build"
            }
        },
        {
            "src": "media/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/media/:path*",
            "destination": "/media/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/dist/$1"
        }
    ],
    "headers": [
        {
            "source": "/media/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}